<h1><%= @wiki.title %>
    <% if @wiki.private? %>
      <small>Private Wiki</small>
    <% end %>
</h1>

<% if policy(@wiki).update? %>
    <%= link_to "Edit Wiki", edit_wiki_path(@wiki), class: 'btn btn-success' %>
<% end %>
<% if policy(@wiki).destroy? %>
    <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this wiki?'} %>
<% end %>

<div class="row">
    <div class="col-md-8">
        <p><%= @wiki.body %></p>
        <small>
            submitted <%= time_ago_in_words(@wiki.created_at) %> ago by <%= @wiki.user.email %> <br>
<!-- last updated time and user? -->
        </small>
    </div>
</div>
